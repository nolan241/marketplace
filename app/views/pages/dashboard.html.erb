<div class="row">
    
    <!-- profile -->
    <div class="col-md-2">
        <h2><%= @user.name %></h2>
        <%= gravatar_tag @user.email, size: 150 %>
    </div>

    <!-- places -->
    <div class="col-md-5">
        <h3>My Places</h3>
        <table class="table">
    	    <thead>
    			<tr>
    				<th>Name</th>
    				<th>Created</th>
    				<th> <!-- actions --> </th>
    			</tr>
    	    </thead>
    	    
    	    <tbody>
    	        <% @places.each do |place| %>
    	        <tr>
    	           <td><%= place.name %></td>
    	           <td>Created <%= time_ago_in_words(place.created_at) %> ago</td>
    	           <td><%= link_to "Edit",edit_place_path(place) %> | <%= link_to "Destroy", place_path(place), method: :delete, data: {confirm: "Are you sure?"} %></td>
    	        </tr>
    	        <% end %>
    	    </tbody>
    	    
        </table>
    </div>

    <!-- review -->
    <div class="col-md-5">
        <h3>My Review</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Place</th>
                    <th>When</th>
                    <th>Rating</th>
                    <th><!-- Actions --></th>
                </tr>
            </thead>
            <tbody>
                <% @reviews.each do |review| %>
                <tr>
                    <td><%= review.place.name %></td>
                    <td>added <%= time_ago_in_words(review.created_at) %> ago</td>
                    <td class="score_<%= review.id %>"></td>
                    <td><%= link_to "Edit", edit_review_path(review) %> | <%= link_to "Destroy", review_path(review), method: :delete, data: {confirm: "Are you sure?"} %></td>
                </tr>
                <% end %> 
            </tbody>
        </table>
    </div>

</div>

<script>
 <% @reviews.each do |review| %>
      $(".score_<%= review.id %> ").raty({
      starOn: "<%= image_path('star-on.png') %>",
      starOff: "<%= image_path('star-off.png') %>",
      score: '<%= review.score %>',
      readOnly: true 
    });
  <% end %>
</script>